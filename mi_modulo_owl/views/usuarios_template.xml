<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="lista_usuarios_template" name="Lista de Usuarios">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block pt32 pb32" data-snippet="s_text_block">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <h1 class="text-center mb-4">Lista de Usuarios</h1>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Nombre</th>
                                                <th>Login</th>
                                                <th>Email</th>
                                                <th>Acci√≥n</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="usuarios" t-as="usuario">
                                                <tr>
                                                    <td><t t-esc="usuario.name"/></td>
                                                    <td><t t-esc="usuario.login"/></td>
                                                    <td><t t-esc="usuario.email"/></td>
                                                    <td>
                                                        <button class="btn btn-primary btn-sm" onclick="mostrarEmail(this.parentElement.parentElement.children[2].textContent)">
                                                            <i class="fa fa-envelope"/> Ver Email
                                                        </button>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>

    </template>
</odoo>