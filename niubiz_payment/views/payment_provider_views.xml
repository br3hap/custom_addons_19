<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_niubiz" model="ir.ui.view">
        <field name="name">payment.provider.form.niubiz</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_credentials']" position="after">
                <group invisible="code != 'niubiz'" string="Credenciales Niubiz">
                    <field name="niubiz_merchant_id" password="True"/>
                    <field name="niubiz_access_key" password="True"/>
                    <field name="niubiz_secret_key" password="True"/>
                    <field name="niubiz_environment"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>