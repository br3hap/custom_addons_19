<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_yape" model="ir.ui.view">
        <field name="name">payment.provider.form.yape</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='provider_credentials']" position="after">
                <group invisible="code != 'yape'" string="Credenciales Yape">
                    <field name="yape_client_id" password="True"/>
                    <field name="yape_client_secret" password="True"/>
                    <field name="yape_merchant_id"/>
                    <field name="yape_environment"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>